  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./daisy": "./dist/daisy.js",
    "./skeleton": "./dist/skeleton.js",
    "./*.css": "./dist/css/*.css",
    "./themes/basic.css": "./dist/css/themes/basic.css",
    "./themes/*.css": "./dist/css/themes/generated/*.css"
  },
  "files": [
    "dist"
  ]
