  "scripts": {
    "dev": "rimraf dist && tsc -p tsconfig.build.json --watch",
    "build": "rimraf dist && tsc -p tsconfig.build.json && pnpm build:css && cp -r ./src/lib/css dist",
    "build:css": "tsc --noEmit && tsx ./src/lib/cli.ts",
    "preview": "vite preview",
    "package": "svelte-package",
    "prepublishOnly": "svelte-package",
    "check": "tsc --noEmit",
    "check:watch": "tsc --noEmit --watch",
    "test:unit": "TZ=UTC+4 vitest",
    "lint": "prettier --check .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@skeletonlabs/tw-plugin": "^0.4.1",
    "@sveltejs/package": "^2.3.10",
    "@types/culori": "^2.1.1",
    "@types/d3-array": "^3.2.1",
    "@types/lodash-es": "^4.17.12",
    "daisyui": "^4.12.24",
    "prettier": "^3.5.2",
    "rimraf": "6.0.1",
    "tslib": "^2.8.1",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vite": "^6.2.0",
    "vitest": "^3.0.7"
  },
  "type": "module",
  "dependencies": {
    "@layerstack/utils": "workspace:^",
    "clsx": "^2.1.1",
    "culori": "^4.0.1",
    "d3-array": "^3.2.4",
    "date-fns": "^4.1.0",
    "lodash-es": "^4.17.21",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.9"
